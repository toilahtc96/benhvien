@model WCF.BussinessObject.EntityObject.EquipmentObject
@{
    ViewBag.Title = "AddEquipmentView";
    Layout = "~/Areas/admin/Views/Shared/LayOut.cshtml";
}
@using (Html.BeginForm("RedirectToView", "AddEquipment", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Them dữ Cơ Sở Vật Chất</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-sm-6">
                    </div>

                    <div class="col-sm-6">
                    </div>
                </div><div class="row">
                    <div class="col-sm-12">
                        <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info" style="width:70%;height:80%">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 177px;">@Html.DisplayNameFor(m=>m.Image)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 224px;">@Html.DisplayNameFor(m => m.Name)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 205px;">@Html.DisplayNameFor(m => m.Detail)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="2" aria-label="Platform(s): activate to sort column ascending" style="width: 205px;">Thao Tác</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr role="row" class="odd">

                                    <td class="sorting_1">
                                        <input type="file" name="Image" value="" />
                                    </td>
                                    <td>@Html.TextBoxFor(m => m.Name)</td>
                                    <td>@Html.TextBoxFor(m => m.Detail)</td>
                                    <td>
                                        <input type="submit" value="Xác Nhận" class="btn btn-info" />
                                        @Html.ActionLink("Cancel", "Cancelbt", "AddEquipment", null, new { @class = "btn btn-warning" })
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
}