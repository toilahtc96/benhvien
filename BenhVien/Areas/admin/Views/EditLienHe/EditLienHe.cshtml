@model List<WCF.BussinessObject.EntityObject.FeedbackObject>
@{
    ViewBag.Title = "EditLienHe";
    Layout = "~/Areas/admin/Views/Shared/LayOut.cshtml";
}
@using (Html.BeginForm("RedirectToAdmin", "EditLienHe", FormMethod.Post))
{
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Sửa Thông Tin Liên Hệ</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info" style="width:100%;height:80%">

                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 177px;">@Html.DisplayNameFor(m => m.FirstOrDefault().CustomerName)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 224px;">@Html.DisplayNameFor(m => m.FirstOrDefault().CrateDate)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 224px;">@Html.DisplayNameFor(m => m.FirstOrDefault().Email)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 224px;">@Html.DisplayNameFor(m => m.FirstOrDefault().PhoneNumber)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 224px;">@Html.DisplayNameFor(m => m.FirstOrDefault().NoiDung)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="2" aria-label="Platform(s): activate to sort column ascending" style="width: 100px;">Thao Tác</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr role="row" class="odd">
                                        <td>  @item.CustomerName </td>
                                        <td class="sorting_1">
                                            @item.CrateDate
                                        </td>
                                        <td>@item.Email</td>
                                        <td>
                                            @item.PhoneNumber
                                        </td>
                                        <td>
                                            @item.NoiDung
                                        </td>
                                        <td>
                                            @Html.ActionLink("Sửa", "RedirectoEditView", "EditLienHe", new { id = item.ID }, new { @class = "btn btn-info" })
                                            @Html.ActionLink("Xóa", "DeleteLienHe_clk", "EditLienHe", new { ID = item.ID }, new { @class = "btn btn-warning" })
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
}