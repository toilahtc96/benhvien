@model WCF.BussinessObject.EntityObject.FeedbackObject
@{
    ViewBag.Title = "EditLienHeByid";
    Layout = "~/Areas/admin/Views/Shared/LayOut.cshtml";
}

@using (Html.BeginForm("EditLienHeDone", "EditLienHe", FormMethod.Post))
{
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Sửa dữ liệu Liên Hệ</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 177px;">@Html.DisplayNameFor(m => m.CustomerName)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 224px;">@Html.DisplayNameFor(m => m.CrateDate)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 205px;">@Html.DisplayNameFor(m => m.Email)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 205px;">@Html.DisplayNameFor(m => m.PhoneNumber)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 205px;">@Html.DisplayNameFor(m => m.NoiDung)</th>
                                    <th tabindex="0" aria-controls="example1" rowspan="1" colspan="2" style="width: 110px;">Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr role="row" class="odd">
                                    @Html.HiddenFor(m => m.ID)
                                    <td class="sorting_1">
                                        @Html.TextBoxFor(m => m.CustomerName)
                                    </td>
                                    <td>@Html.TextBoxFor(m => m.CrateDate)</td>
                                    <td>@Html.TextBoxFor(m => m.Email)</td>
                                    <td>@Html.TextBoxFor(m => m.PhoneNumber)</td>
                                    <td>@Html.TextAreaFor(m => m.NoiDung)</td>
                                    <td>
                                        <input type="submit" value="Xác Nhận" class="btn btn-info" />
                                        @Html.ActionLink("Cancel", "Cancelbt", "EditLienHe", null, new { @class = "btn btn-warning" })
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
}